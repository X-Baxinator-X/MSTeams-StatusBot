{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Was möchtest du tun?",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "🟢 Online stellen",
          "data": {
            "action": "setStatus",
            "status": "online"
          }
        },
        {
          "type": "Action.Submit",
          "title": "🔴 Offline stellen",
          "data": {
            "action": "setStatus",
            "status": "offline"
          }
        },
        {
          "type": "Action.Submit",
          "title": "🗒️ Online Liste zeigen",
          "data": {
            "action": "showList"
          }
        }
      ]
    }
  ],
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}
